{
  "name": "@xmanscript/storybook-react-app-boilerplate",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "prepare": "husky install",
    "commit": "cz",
    "lint:fix": "eslint --fix ."
  },
  "dependencies": {
    "@fontsource/material-icons": "^5.0.11",
    "class-variance-authority": "^0.7.0",
    "lint-staged": "^15.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^2.1.0",
    "tailwindcss-animate": "^1.0.7",
    "dom-to-code": "^1.5.4",
    "vite-tsconfig-paths": "^4.2.1"
  },
  "devDependencies": {
    "@storybook/addon-essentials": "^8.0.0-alpha.1",
    "@storybook/addon-interactions": "^8.0.0-alpha.1",
    "@storybook/addon-links": "^8.0.0-alpha.1",
    "@storybook/addon-onboarding": "^1.0.9",
    "@storybook/blocks": "^8.0.0-alpha.1",
    "@storybook/react": "^8.0.0-alpha.1",
    "@storybook/react-vite": "^8.0.0-alpha.1",
    "@storybook/test": "^8.0.0-alpha.1",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.16",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.53.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "eslint-plugin-storybook": "^0.6.15",
    "husky": "^8.0.0",
    "postcss": "^8.4.32",
    "storybook": "^8.0.0-alpha.1",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.2.2",
    "vite": "^5.0.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --cache --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
